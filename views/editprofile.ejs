<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" type="image/x-icon" href="/images/logo/D.png">
  <title>Digimon</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
 <style>
      @media  (max-width: 743px){
     

     #navmenuitm{

       display: none;
     }
     
   }
 </style>
</head>
<body>
    <div class="main bg-zinc-900  h-screen min-w-screen">


        <form id="profileimgform" method="post" hidden enctype="multipart/form-data" action="/ep">
            <input accept=".jpg, .jpeg, .png" type="file" name="image" id="profileImage">
          </form>
          

        <!-- For nav bar -->
        <div class="navbar flex justify-between px-5 md:px-10 pt-1 md:pt-5 ">
          <a href="/feed">
          <img class="aspect-auto w-48 "  src="/images/logo/dlogo.png" alt="Digimon"></a>

          <div class="flex gap-12  text-xl md:hidden text-red-700  font-bold items-center" id="menuitm"  class="menu">
            <a class="opacity-80 hover:opacity-100"
            href="/feed">Feed</a>

          </div>
          <div class="flex gap-12 text-white text-xl   font-semibold items-center" id="navmenuitm"  class="menu">
            <a class="opacity-80 hover:opacity-100"
              href="/feed">Feed</a><a class="opacity-80 hover:opacity-100" href="/profile">Profile</a><a class="opacity-80 hover:opacity-100 hover:text-red-700" href="/logout">Logout</a>
          </div>
        </div>
        <!-- End of nav bar -->
<div class="h-screen w-full flex flex-row justify-center ">

          <div class="userinfo relative rounded-lg w-full   h-3/4 md:w-3/4 bg-zinc-800">
            <div class="w-full rounded-t-lg  bg-zinc-900 h-16">

            </div>

                <div class="flex z-10 justify-center left-1/2  absolute top-0">
                    



                            <div class="profileImg   flex  absolute  z-1  w-32 h-32 bg-zinc-100 rounded-full overflow-hidden ">
                                <i id="editPimg"
                                class=" ri-pencil-fill scale-90 hover:scale-100 cursor-pointer text-zinc-800 rounded-full h-10 w-10 absolute bottom-0 right-0 bg-red-200 pl-2 pt-1"></i>
                                <img class="  w-32 h-32 object-cover" src="/images/uploades/<%=user.profileImage%>" alt="">
                            
                            </div>
                    
                        </div>

                        <div class="bg-zinc-950 w-full h-20  rounded-t-lg "></div>



                <div class="name flex justify-center text-2xl font-semibold text-white">
                
                    @<%=user.username%>
                </div>
                <div class="update flex w-full justify-center ">

                    <form action="/updateuser" method="post" class="flex flex-col w-3/4 md:w-2/3 gap-y-4 text-white ">
                        <!-- <input accept=".jpg, .jpeg, .png" type="file" name="image" id="profileImage" hidden> -->
                        <label for="name" class="font-semibold"> Name</label>
                        <input type="text"  class="rounded-sm w-full h-16 bg-zinc-700 pl-2" placeholder="<%=user.name%>" name="name" />
                        <label for="email" class="font-semibold"> Email</label>
                        <input type="email"  class="rounded-sm font-semibold w-full h-16 bg-zinc-700 pl-2" placeholder="<%=user.email%>" name="email" />
                        <button  type="submit">Save</button>
                    </form>







                </div>
          </div>
        </div>
          

     </div>
</body>
<script>  document.querySelector("#editPimg").addEventListener("click", () => {
    document.querySelector("#profileImage").click();

  });
  document.querySelector("#profileImage").addEventListener("change", () => {

    document.querySelector("#profileimgform").submit();
  });
</script>
</html>